<resources>
    <style name="AppThemeLight" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/accent</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/dark_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="android:colorAccent">@color/dark_accent</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:textColorTertiary">@color/dark_accent</item>
        <item name="android:textColor">@color/dark_text_main</item>
    </style>

</resources>